pipeline {
    agent any
    
        stages {
            stage('Docker Pull') {
                steps  {
                 sh "docker pull jrdeveloper06/nginx_hello:${params.BUILD_NUMBER}"
                }
            }
             stage('Dive Analyze') {
                steps  {
                    sh "dive --ci --lowestEfficiency=0.99 jrdeveloper06/nginx_hello:${params.BUILD_NUMBER} " // --lowestEfficiency=0.99
                }
                
            }
        
        }
}
